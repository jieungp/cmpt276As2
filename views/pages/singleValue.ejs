  <style>
    h2 {
      font-size: 38px;
      position: absolute;
      left: 50px;
      top: 10px;
    }
    table {
      background-color: #98FF98;
      font-size: 38px;
      position: absolute;
      left: 50px;
      top: 100px;
    }
    table, thead, tbody, th {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 10px;
    }
    tbody {
      color: #4169E1;
      font-size: 30px;
    }
    tbody > tr:hover {
      background-color: yellow;
      color: red;
    }
    .button {
      background-color: pink;
      font-size: 24px;
      width: 300px;
      height: 100px;
      position: absolute;
      left: 50px;
      top: 400px;
    }
    .button:hover {
      background-color: yellow;
    }
