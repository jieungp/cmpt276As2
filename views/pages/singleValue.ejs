            <th>Type</th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(function(attr) { %>
            <tr onclick="fake2()">
              <th><%= attr.name %></th>
              <th><%= attr.size %></th>
              <th><%= attr.height %></th>
              <th><%= attr.type %></th>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <button onclick="location.href='./person.html'" class="button">RETURN</button>
